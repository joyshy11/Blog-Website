<% include partials/header %>
<h1 style="padding: 3% 5% 0.5%">Home</h1>

<p style="padding: 0.5% 5% 0.5%"><%=paragraph%></p>
<h1 style="padding: 1% 5% 0.5%"><%= composTitle %></h1>
<p style="padding: 0.5% 5% 0.5%"><%= composContent %></p>

<% posts.forEach(function (post) { %>
<h1 style="padding: 1% 5% 0.5%"><%= post.title %></h1>
<p style="padding: 0.5% 5% 0.5%">
  <%= post.content.substring(0, 100) +"..." %>
  <a href="/posts/<%= post.title %>">Read More</a>
</p>

<%}); %> <% include partials/footer %>
